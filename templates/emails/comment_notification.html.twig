{% extends '@email/default/notification/body.html.twig' %}

{% block content %}
    Автор: {{ comment.author }}<br />
    Email: {{ comment.email }}<br />
    Состояние: {{ comment.state }}<br />

    <p>
        {{ comment.text }}
    </p>
{% endblock %}

{% block action %}
    <spacer size="16"></spacer>
    <button href="{{ url('review_comment', { id: comment.id }) }}">Подтвердить</button>
    <button href="{{ url('review_comment', { id: comment.id, reject: true }) }}">Отклонить</button>
{% endblock %}